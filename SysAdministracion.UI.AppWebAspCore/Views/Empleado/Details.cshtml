@model SysAdministracion.EntidadesDeNegocio.Empleado

@{
    ViewData["Title"] = "Details";
}

<h1>Ver Empleado</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DUI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DUI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        @if (Model.Cargo == 1)
        {
            <dd class="col-sm-10">
                ADMINISTRADOR_DE_REDES
            </dd>
        }
        else if (Model.Cargo == 2)
        {
            <dd class="col-sm-10">
                DESARROLLADOR
            </dd>
        }
        @if (Model.Cargo == 3)
        {
            <dd class="col-sm-10">
                MANTENIMINETO
            </dd>
        }
        else if (Model.Cargo == 4)
        {
            <dd class="col-sm-10">
                ELECTRICISTA
            </dd>
        }
        @if (Model.Cargo == 5)
        {
            <dd class="col-sm-10">
                ENCARGADO_DE_LIMPIEZA
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        @if (Model.Area == 1)
        {
            <dd class="col-sm-10">
                RECURSOS_HUMANOS
            </dd>
        }
        else if (Model.Area == 2)
        {
            <dd class="col-sm-10">
                IT
            </dd>
        }
        @if (Model.Area == 3)
        {
            <dd class="col-sm-10">
                MANTENIMIENTO
            </dd>
        }
        else
        {
            <dd class="col-sm-10"> </dd>
        }
    </dl>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            @Html.ActionLink("Ir a modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
            <a asp-action="Index" class="btn btn-dark">Cancelar</a>
        </div>
    </div>
</div>